  </head>

  <style>
    ::placeholder {
      /* Chrome, Firefox, Opera, Safari 10.1+ */
      /* color: rgba(114, 114, 114, 0.849) !important;
            opacity: 1 !important; */
      font-family: "Montserrat" !important;
      font-style: normal !important;
      font-weight: 500 !important;
      font-size: 15px !important;
      line-height: 13px !important;

      color: #c1c1c1 !important;
      /* Firefox */
    }
    @media screen and (min-width: 300px) and (max-width: 496px) {
      ::placeholder {
        font-size: 11px !important;
      }
    }
    :-ms-input-placeholder {
      /* Internet Explorer 10-11 */
      color: rgba(114, 114, 114, 0.849) !important;
    }
    ::-ms-input-placeholder {
      /* Microsoft Edge */
      color: rgba(114, 114, 114, 0.849) !important;
    }
    .notification {
      padding: 0.6rem !important;
    }
    .danger {
      color: hsl(348, 100%, 61%);
    }
    .success {
      color: hsl(141, 53%, 43%);
    }
  </style>
  <body>
    <div class="cont">
      <image src="/images/infotech.png"></image>
    </div>

    <form
      id="regForm"
      action="/exercises/add"
      method="POST"
      name="regForm"
      ng-app="myApp"
      ng-controller="formCtrl"
      novalidate
    >
      <div class="tab">
        <!-- Name field -->

        <input
          class="input"
          type="text"
          placeholder="System name"
          name="SystemName"
          required
          autofocus
          ng-model="SystemName"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(SystemName)"
          ng-class="{
            'is-danger':
              regForm.SystemName.$invalid && !regForm.SystemName.$pristine,
            'is-success':
              regForm.SystemName.$valid && !regForm.SystemName.$pristine
          }"
        />
        <!-- Name error message -->
        <div
          class="notification is-danger"
          ng-show="regForm.SystemName.$invalid && !regForm.SystemName.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            System Name should contain
            <strong>only</strong> letters
          </span>
        </div>
        <input
          class="input"
          type="text"
          placeholder="Change Type"
          name="ChangeType"
          required
          autofocus
          ng-model="ChangeType"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(ChangeType)"
          ng-class="{
            'is-danger':
              regForm.ChangeType.$invalid && !regForm.ChangeType.$pristine,
            'is-success':
              regForm.ChangeType.$valid && !regForm.ChangeType.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="regForm.ChangeType.$invalid && !regForm.ChangeType.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Change Type should contain
            <strong>only</strong> letters
          </span>
        </div>
        <input
          class="input"
          type="text"
          placeholder="Severity Level"
          name="SeverityLevel"
          required
          autofocus
          ng-model="SeverityLevel"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(SeverityLevel)"
          ng-class="{
            'is-danger':
              regForm.SeverityLevel.$invalid &&
              !regForm.SeverityLevel.$pristine,
            'is-success':
              regForm.SeverityLevel.$valid && !regForm.SeverityLevel.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="
            regForm.SeverityLevel.$invalid && !regForm.SeverityLevel.$pristine
          "
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Severity Level should contain
            <strong>only</strong> letters
          </span>
        </div>
      </div>
      <div class="tab">
        <input
          class="input"
          type="date"
          placeholder="Date of request"
          required
          autofocus
          ng-model="Dateofrequest"
          ng-class="{
            'is-danger':
              regForm.Dateofrequest.$invalid &&
              !regForm.Dateofrequest.$pristine,
            'is-success':
              regForm.Dateofrequest.$valid && !regForm.Dateofrequest.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="
            regForm.Dateofrequest.$invalid && !regForm.Dateofrequest.$pristine
          "
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Invaild date type
          </span>
        </div>
        <input
          class="input"
          type="tel"
          placeholder="01234"
          name="CRF"
          required
          ng-maxlength="5"
          ng-minlength="5"
          ng-model="CRF"
          ng-pattern="/^[0-9]+$/i"
          ng-class="{
            'is-danger': regForm.CRF.$invalid && !regForm.CRF.$pristine,
            'is-success': regForm.CRF.$valid && !regForm.CRF.$pristine
          }"
        />

        <!-- CRF error message -->
        <div
          class="notification is-danger"
          ng-show="regForm.CRF.$invalid && !regForm.CRF.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            CRF no. should contain only
            <strong>5 digits</strong>
          </span>
        </div>
        <input
          class="input"
          type="text"
          placeholder="Description"
          name="Description"
          required
          autofocus
          ng-model="Description"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(Description)"
          ng-class="{
            'is-danger':
              regForm.Description.$invalid && !regForm.Description.$pristine,
            'is-success':
              regForm.Description.$valid && !regForm.Description.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="
            regForm.Description.$invalid && !regForm.Description.$pristine
          "
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Description should contain
            <strong>only</strong> letters
          </span>
        </div>
        <input
          class="input"
          type="date"
          placeholder="Expected Date"
          required
          autofocus
          ng-model="ExpectedDate"
          name="ExpectedDate"
          ng-class="{
            'is-danger':
              regForm.ExpectedDate.$invalid && !regForm.ExpectedDate.$pristine,
            'is-success':
              regForm.ExpectedDate.$valid && !regForm.ExpectedDate.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="
            regForm.ExpectedDate.$invalid && !regForm.ExpectedDate.$pristine
          "
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Invaild date type
          </span>
        </div>
      </div>
      <div class="tab">
        <input
          class="input"
          type="text"
          placeholder="Requested By"
          name="RequestBy"
          required
          autofocus
          ng-model="RequestBy"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(RequestBy)"
          ng-class="{
            'is-danger':
              regForm.RequestBy.$invalid && !regForm.RequestBy.$pristine,
            'is-success':
              regForm.RequestBy.$valid && !regForm.RequestBy.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="regForm.RequestBy.$invalid && !regForm.RequestBy.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            This field should contain
            <strong>only</strong> letters
          </span>
        </div>

        <input
          class="input"
          type="text"
          placeholder="Approved By"
          name="ApprovedBy"
          required
          autofocus
          ng-model="ApprovedBy"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(ApprovedBy)"
          ng-class="{
            'is-danger':
              regForm.ApprovedBy.$invalid && !regForm.ApprovedBy.$pristine,
            'is-success':
              regForm.ApprovedBy.$valid && !regForm.ApprovedBy.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="regForm.ApprovedBy.$invalid && !regForm.ApprovedBy.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            This field should contain
            <strong>only</strong> letters
          </span>
        </div>

        <input
          class="input"
          type="date"
          placeholder="Date of receipt"
          name="DateOfReceipt"
          required
          autofocus
          ng-model="DateOfReceipt"
          ng-class="{
            'is-danger':
              regForm.DateOfReceipt.$invalid &&
              !regForm.DateOfReceipt.$pristine,
            'is-success':
              regForm.DateOfReceipt.$valid && !regForm.DateOfReceipt.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="
            regForm.DateOfReceipt.$invalid && !regForm.DateOfReceipt.$pristine
          "
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Invaild date type
          </span>
        </div>
        <input
          class="input"
          type="text"
          placeholder="DMM Remarks"
          name="DMMRemarks"
          required
          autofocus
          ng-model="DMMRemarks"
          ng-pattern="/^[a-z ,.'-]+$/i"
          ng-change="trimmer(DMMRemarks)"
          ng-class="{
            'is-danger':
              regForm.DMMRemarks.$invalid && !regForm.DMMRemarks.$pristine,
            'is-success':
              regForm.DMMRemarks.$valid && !regForm.DMMRemarks.$pristine
          }"
        />
        <div
          class="notification is-danger"
          ng-show="regForm.DMMRemarks.$invalid && !regForm.DMMRemarks.$pristine"
        >
          <span>
            <i class="fas fa-times-circle"></i>
            Remarks should contain
            <strong>only</strong> letters
          </span>
        </div>
        <div class="field" style="margin-top: 3%;">
          <p class="control">
            <input
              type="submit"
              class="button is-info"
              value="Save"
              ng-click="load()"
              ng-disabled="regForm.SystemName.$invalid || regForm.ChangeType.$invalid || regForm.SeverityLevel.$invalid || regForm.email.$invalid || regForm.contact.$invalid
                    || regForm.Date of request.$invalid || regForm.CRF.$invalid|| regForm.Description.$invalid||regForm.ExpectedDate.$invalid || regForm.RequestBy.$valid || regForm.ApprovedBy.$valid || regForm.DateOfReceipt.$valid || regForm.DMMremarks.$valid"
            />
          </p>
        </div>
      </div>

      <div style="overflow: auto;" class="mt-3">
        <button
          type="button"
          id="prevBtn"
          onclick="nextPrev(-1)"
          class="my-4"
          style="float: left;"
        >
          Back
        </button>
        <button
          type="button"
          id="nextBtn"
          onclick="nextPrev(1)"
          class="my-4"
          style="float: right;"
          ng-disabled="!(regForm.SystemName.$valid && regForm.ChangeType.$valid && regForm.SeverityLevel.$valid)"
        >
          Next
        </button>
      </div>
    </form>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
    <div>&nbsp;</div>
  </body>
